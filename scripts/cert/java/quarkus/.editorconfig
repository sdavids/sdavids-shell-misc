# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.adoc]
max_line_length = off

[*.bat]
end_of_line = crlf

[*.java]
max_line_length = 100

[*.properties]
max_line_length = off

[*.kts]
max_line_length = 100

[*.toml]
max_line_length = 80

# https://github.com/mvdan/sh/blob/master/cmd/shfmt/shfmt.1.scd#examples
[gradlew]
ignore=true
